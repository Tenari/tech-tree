<%= form_for(@recipe, url: @recipe.id ? recipe_path(@recipe) : stuff_recipes_path(@recipe.stuff)) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%= f.label :demonstration %> (url)<br>
    <%= f.text_field :demonstration %>
  </div>

  <div class="field">
    <%= f.label :recipe_materials %><br>
    <% @recipe.recipe_materials.each_with_index do |rm, index| %>
      <input
        type="number"
        value="<%=rm.stuff_id%>"
        name="recipe[recipe_materials][][stuff_id]"
      >
      <input
        type="number"
        value="<%=rm.quantity%>"
        name="recipe[recipe_materials][][quantity]"
      >
      <input
        type="text"
        value="<%=rm.unit%>"
        name="recipe[recipe_materials][][unit]"
      >
    <% end %>
    <div>New material:</div>
    <input
      type="number"
      value="0"
      name="recipe[recipe_materials][][stuff_id]"
    >
    <input
      type="number"
      value="1"
      name="recipe[recipe_materials][][quantity]"
    >
    <input
      type="text"
      value="item"
      name="recipe[recipe_materials][][unit]"
    >
  </div>

  <div class="field">
    <%= f.label :steps %><br>
    <%= f.text_area :steps %>
  </div>
  <div class="field">
    <%= f.label :stuff_id %><br>
    <%= f.number_field :stuff_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
